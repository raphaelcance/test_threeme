\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{eqnarray}
UC_{h,k}^{E} & = & \frac{\left(1+\overset{\bullet}{P}_{h,k}^{Ener\_m\text{²\_e}}\right)^{1/\delta_{h,k}^{BUIL}}-1}{\overset{\bullet}{P}_{h,k}^{Ener\_m\text{²}\_e}/\delta_{h,k}^{BUIL}}.P_{h,k}^{Ener\_m^{2}}\\
P_{h,k}^{Ener\_m\text{²}}.BUIL_{h,k} & = & PENER^{BUIL}.ENER_{h,k}\\
\overset{\bullet}{P}_{h,k,t}^{Ener\_m\text{²}\_e} & = & \lambda_{0}^{Ener\_BUIL}\overset{\bullet}{P}_{h,k,t-1}^{Ener\_m\text{²}\_e}+\lambda_{1}^{Ener\_BUIL}\overset{\bullet}{P}_{h,k,t-1}^{Ener\_m\text{²}}
\end{eqnarray}

\end_inset


\end_layout

\begin_layout Standard
Where 
\begin_inset Formula $R_{h,k}^{CASH}$
\end_inset

 is the share of investment that is paid cash, 
\begin_inset Formula $R_{h,k}^{LOAN}$
\end_inset

 share of investment that is paid with a loan, 
\begin_inset Formula $R_{h,k}^{I}$
